.back-link
  z-index 10
  position fixed
  top 150px
  left 25px
  text-transform uppercase
  display flex
  align-items center
  width 100%
  max-width 230px
  color #fff
  &:before,&:after
    content ''
    display block
  &:before
    width 100%
    height 2px
    background-color #fff
    margin-right 30px
    @extend .trs
  &:after
    position absolute
    width 12px
    height 12px
    border 2px solid transparent
    border-left-color #fff
    border-bottom-color #fff
    left 0
    top 50%
    transform translateY(-50%) rotate(45deg)
  &:hover
    &:before
      margin-right 10px