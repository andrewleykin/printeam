.contact-link
  display flex
  align-items center
  width 250px
  height 40px
  padding 8px 15px
  background #fff
  border-radius 18px
  @extend .trs
  &:hover
    background darken(#fff, 3)

.contact-link__icon
  margin-right 15px
  .icon
    width 23px
    height 23px
    use
      fill $tree-poppy

.contact-link__text
  font-size 22px
  line-height 40px