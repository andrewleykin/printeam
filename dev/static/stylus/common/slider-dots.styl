.slider-dots
  position fixed
  top 50%
  transform translateY(-50%)
  left 60px
  z-index 10
  li
    display block
    width 13px
    height 13px
    border-radius 50%
    border 1px solid #fff
    cursor pointer
    position relative
    &:before
      content ''
      display block
      width 9px
      height 9px
      border-radius: 50%
      background #fff
      opacity 0
      position absolute
      top 1px
      left 1px
      @extend .trs
    &.slick-active
      &:before
        opacity 1
  li+li
    margin-top 75px
  @media (max-width $breakpoint-lg)
    left 20px