.page--thanks
  .wrapper
    height 100%

.thanks
  background-image linear-gradient(to bottom, #fcc207 0%, #fba617 100%)
  height 100%
  width 100%
  display flex
  align-items center
  justify-content center
  flex-direction column
  padding 0 20px

.thanks__title
  color black
  font-size 22px
  line-height 24px
  text-transform uppercase
  max-width 270px
  text-align center
  margin-bottom 150px
  padding-top 100px
  @media (max-width $breakpoint-sm)
    margin-bottom 75px

.thanks__action
  display flex
  align-items center
  max-width 680px
  width 100%

.thanks__text
  color white
  text-transform uppercase
  margin-right 20px
  flex none

.thanks__arrow
  margin-top -5px
  position relative
  width 100%
  max-width 560px
  height 25px
  &:before,&:after
    content ''
    display block
    position absolute
  &:before
    width 0
    height 2px
    background-color white
    left 0
    top 50%
    transform translateY(-50%)
    transition all .7s
  &:after
    width 0
    height 0
    border 2px solid transparent
    border-right-color white
    border-bottom-color white
    right 0
    top 50%
    transform translateY(-50%) rotate(-45deg)
    transition all .4s
    transition-delay .8s
  &.active
    &:before
      width 100%
    &:after
      width 12px
      height 12px