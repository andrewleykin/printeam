.choice
  background-image linear-gradient(to bottom, #fcbc0b 0%, #faad13 100%)
  .container
    height 100%

.choice__wrap
  width 100%
  height 100%
  max-width 1155px
  margin-left auto
  margin-right 30px
  display flex
  justify-content flex-end
  align-items center

.choice__imgs
  position relative
  height 100%
  width 100%

.choice__img
  position absolute
  transition all 1s
  &--1
    left -75%
    bottom 10.39%
    z-index 3
    &.active
      left 0
  &--2
    left -75%
    bottom 20.78%
    z-index 2
    &.active
      left 30.51%
      transition-delay .2s
  &--3
    left -75%
    bottom 28.57%
    z-index 1
    &.active
      left 59.16%
      transition-delay .4s
  img
    max-width none
  &.none
    left -75%

.choice__info
  width 100%
  max-width 290px
  display flex
  flex-direction column
  align-items center
  text-align center
  margin-top 25%

.choice__text
  font-size 22px
  line-height 24px
  text-transform uppercase
  margin-bottom 40px