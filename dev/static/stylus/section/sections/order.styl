.order
  background-image linear-gradient(to bottom, #faad13 0%, #f8a019 100%)
  .container
    height 100%
    display flex
    flex-direction: column
    justify-content center

.order__wrap
  width 100%
  max-width 1024px
  margin-left auto
  margin-right 80px

.order__main
  display flex

.order__block
  flex none
  width 100%
  max-width 490px
  margin-right 40px
  border-radius 18px
  background-color #ffffff
  padding 40px 30px
  height 345px

.order__group
  position relative
  width 100%
  max-width 310px
  &+&
    margin-top 35px
  &.invalid
    .order__input
      border-color red
  &.valid
    .order__input
      border-color green

.order__input
  display block
  width 100%
  border-radius 18px
  border 3px solid $tree-poppy
  font-size 15px
  font-weight 700
  line-height 40px
  padding 0 20px
  &:focus
    & + .order__label
      opacity 0

.order__label
  @extend .trs
  cursor pointer
  font-size 15px
  font-weight 700
  line-height 40px
  position absolute
  left 20px
  top 3px
  &.hide
    opacity 0

.order__info
  padding-top 30px

.order__title
  margin-bottom 48px
  font-size 22px
  line-height 24px
  text-transform uppercase
  span
    display block

.order__link
  &+&
    margin-top 22px

.order__action
  margin-top -45px
  display flex
  justify-content space-between
  width 100%
  max-width 878px
  margin-left auto

.order__check
  display flex
  width 100%

.order__icon
  margin-right 5px
  .icon
    width 11px
    height 11px
    use
      fill $tree-poppy

.order__subaction
  width 100%

.order__text
  width 100%
  max-width 241px
  display block
  font-size 11px
  font-weight 700

.order__arrow
  margin-top -5px
  position relative
  width 100%
  max-width 650px
  height 25px
  &:before,&:after
    content ''
    display block
    position absolute
  &:before
    width 100%
    height 2px
    background-color $tree-poppy
    left 0
    top 50%
    transform translateY(-50%)
  &:after
    width 12px
    height 12px
    border 2px solid transparent
    border-right-color $tree-poppy
    border-bottom-color $tree-poppy
    right 0
    top 50%
    transform translateY(-50%) rotate(-45deg)


.order__btn
  margin-left 25px
  flex none
  margin-top 5px