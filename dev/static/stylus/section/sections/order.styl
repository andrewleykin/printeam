.order
  background-image linear-gradient(to bottom, #faad13 0%, #f8a019 100%)
  .container
    height 100%
    display flex
    flex-direction: column
    justify-content center
  @media (max-width $breakpoint)
    background-image none
    margin-bottom 70px

.order__wrap
  width 100%
  max-width 1024px
  margin-left auto
  margin-right 80px
  @media (max-width $breakpoint-lg)
    padding 0 20px
    margin 0 auto

.order__main
  display flex
  @media (max-width $breakpoint)
    flex-direction column-reverse

.order__block
  flex none
  width 100%
  max-width 490px
  margin-right 40px
  border-radius 18px
  background-color #ffffff
  padding 40px 30px
  height 345px
  @media (max-width $breakpoint-lg)
    max-width 420px
    margin-right 20px
  @media (max-width $breakpoint)
    max-width 355px
    height 300px
    margin 0 auto
    padding 30px 20px

.order__group
  position relative
  width 100%
  max-width 310px
  &+&
    margin-top 35px
  &.invalid
    .order__input
      border-color $pomegranate
  &.valid
    .order__input
      border-color $tree-poppy

.order__input
  display block
  width 100%
  border-radius 18px
  border 3px solid $tree-poppy
  font-size 15px
  font-weight 700
  line-height 40px
  padding 0 20px
  &:focus
    & + .order__label
      opacity 0

.order__label
  @extend .trs
  cursor pointer
  font-size 15px
  font-weight 700
  line-height 40px
  position absolute
  left 20px
  top 3px
  &.hide
    opacity 0

.order__info
  padding-top 30px
  @media (max-width $breakpoint)
    padding-top 0
    text-align center
    margin-bottom 50px

.order__title
  margin-bottom 48px
  font-size 22px
  line-height 24px
  text-transform uppercase
  span
    display block
  @media (max-width $breakpoint-lg)
    font-size 15px
    line-height 17px
    margin-bottom 20px
    span
      display inline
  @media (max-width $breakpoint)
    max-width 250px
    margin 0 auto 30px
    span
      display block

.order__link
  &+&
    margin-top 22px
  @media (max-width $breakpoint)
    display flex
    justify-content center
    &+&
      margin-top 30px

.order__action
  margin-top -45px
  display flex
  justify-content space-between
  width 100%
  max-width 878px
  margin-left auto
  @media (max-width $breakpoint-lg)
    max-width 650px
  @media (max-width $breakpoint)
    max-width 355px
    margin -50px auto 0
    flex-direction column
    padding 0 25px

.order__check
  display flex
  width 100%

.order__icon
  margin-right 5px
  .icon
    width 11px
    height 11px
    use
      fill $tree-poppy

.order__subaction
  width 100%
  @media (max-width $breakpoint)
    display flex
    position relative

.order__text
  width 100%
  max-width 241px
  display block
  font-size 11px
  font-weight 700

.order__arrow
  margin-top -5px
  position relative
  width 100%
  max-width 650px
  height 25px
  &:before,&:after
    content ''
    display block
    position absolute
  &:before
    width 100%
    height 2px
    background-color $tree-poppy
    left 0
    top 50%
    transform translateY(-50%)
  &:after
    width 12px
    height 12px
    border 2px solid transparent
    border-right-color $tree-poppy
    border-bottom-color $tree-poppy
    right 0
    top 50%
    transform translateY(-50%) rotate(-45deg)
  @media (max-width $breakpoint)
    max-width 25px
    height 95px
    margin-top 0
    position absolute
    right 5px
    &:before
      width 2px
      height 100%
    &:after
      top 95%
      right 50%
      transform translate(-50%, -50%) rotate(45deg)

.order__btn
  margin-left 25px
  flex none
  margin-top 5px
  @media (max-width $breakpoint)
    margin-left 0
    margin-top 60px
    align-self flex-end