.top-banner
  background-image linear-gradient(to bottom, #ffd200 0%, #fec905 100%)
  .container
    height 100%
    display flex
    flex-direction column
    justify-content flex-end

.top-banner__wrap
  width 100%
  max-width 1120px
  margin-left auto
  display flex
  align-items center
  justify-content space-between

.top-banner__info
  display flex
  flex-direction column
  align-items center
  text-align center
  max-width 435px

.top-banner__logo
  margin-bottom 50px

.top-banner__text
  margin-bottom 60px
  font-size 22px
  line-height 24px
  text-transform uppercase